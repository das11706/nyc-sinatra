<h1>Update Figure</h1>

<h2>Edits for <%=@figure.name%></h2>

  <form action="/figures/<%=@figure.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Figure's Name:</label>
    <br>
    
    <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

    <br>
    <p>Select an existing title or create a new one below.</p>

    <h3>Existing Titles</h3>
    <% @titles.each do |title| %>
      <input type="radio" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
      <% end %>
      <br>

      <h3>New title</h3>
      <label>Title Name: </label>
      <br>
      <input type="text" name="title[name]" id="title_name"></input>
      <br><br>

      <p>Select an existing landmark or create a new one below.</p>

      <h3>Existing Landmarks</h3>
      <% @landmarks.each do |landmark| %>
        <input type="radio" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
        <% end %>
        <br>

        <h3>New Landmark</h3>
        <label>Landmark Name: </label>
        <br>
        <input type="text" name="landmark[name]" id="new_landmark"></input>
        <br><br>

      <input type="submit" value="Edit Figure">
</form>


